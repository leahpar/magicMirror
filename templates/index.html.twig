<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <title>{% block title %}Welcome!{% endblock %}</title>

        <link rel="stylesheet" href="{{ asset('style/main.css') }}">
        <!-- font -->
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
        <!-- icons -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </head>
    <body>

    <div class="main">

        <div class="row">
            {% include "cards/horloge.html.twig" %}
            {{ render(controller("App\\Controller\\MeteoController::currentMeteoAction")) }}
        </div>

        <div class="row">
            <div>
                {{ render(controller("App\\Controller\\CalendarController::fifaAction")) }}
                {{ render(controller("App\\Controller\\SimpleApiController::changeAction")) }}
            </div>

            <div>
                {{ render(controller("App\\Controller\\MeteoController::forecastMeteoAction")) }}
                {{ render(controller("App\\Controller\\DomoticController::statusAction")) }}
            </div>
        </div>

        <div class="row">
            <div class="card">
                <img src="{{ asset('img/worldmap.png') }}" width="100%">
            </div>
        </div>

        <div class="row">
            {{ render(controller("App\\Controller\\RssController::rssAction")) }}
        </div>

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="{{ asset('js/index.js') }}"></script>
    </body>
</html>
