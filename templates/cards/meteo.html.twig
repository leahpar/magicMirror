    <ul>
        {% for weather in forecast %}
            <li>
                {% if weather.time.day.date|ddate is null %}
                    {{ weather.time.day.date|date("d/m") }}
                {% else %}
                    {{ weather.time.day.date|ddate|capitalize }}
                {% endif %}
                {{ weather.time.from|date("H") }}h
                <img src="{{ asset("img/meteo/" ~ weather.weather.icon|weatherIcon) }}" width="20px">
                {{ weather.temperature.now.value|number_format(1) }}°C
            </li>
        {% endfor %}
    </ul>

