<div class="card meteo">

    <div class="head">
        <div>
            <img src="{{ asset("img/meteo/" ~ weather.weather.icon|weatherIcon) }}" width="150px">
        </div>

        <div>
            <span class="tempCur">
            {{ weather.temperature.now.value|number_format(1) }}°C
            </span>
            <br>
            <span class="tempMin">
                {{ weather.temperature.min.value|round }}°C /
                {{ weather.temperature.max.value|round }}°C
            </span>
        </div>
    </div>

